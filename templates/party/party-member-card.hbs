{{! Member Card — rendered once per party member }}
<div class="party-member-card" data-actor-uuid="{{uuid}}">

  {{! ── Header: portrait + name + HP ────────────────────── }}
  <header class="member-card-header">
    <button
      type="button"
      class="member-remove-btn"
      data-action="removeMember"
      data-tooltip="{{localize 'VAGABOND.Actor.Party.Card.Remove'}}"
    ><i class="fas fa-times"></i></button>

    <img
      class="member-portrait clickable"
      src="{{img}}"
      alt="{{name}}"
      data-action="openMemberSheet"
      data-tooltip="{{localize 'VAGABOND.Actor.Party.Card.OpenSheet'}}"
    >

    <div class="member-header-info">
      <h3 class="member-name clickable" data-action="openMemberSheet">{{name}}</h3>

      {{! Level · Ancestry · Class subtitle }}
      <p class="member-subtitle">
        {{localize 'VAGABOND.Actor.Party.Card.LevelAbbr'}} {{level}}
        {{#if ancestry}}<span class="member-sep">·</span> {{ancestry}}{{/if}}
        {{#if characterClass}}<span class="member-sep">·</span> {{characterClass}}{{/if}}
      </p>

      {{! Player name }}
      {{#if playerName}}
        <p class="member-player">
          <i class="fas fa-user member-player-icon"></i> {{playerName}}
        </p>
      {{/if}}

      {{! HP bar }}
      <div class="member-resource-row" data-tooltip="{{localize 'VAGABOND.Actor.base.FIELDS.health.value.label'}} {{hp.value}}/{{hp.max}}">
        <i class="fas fa-heart resource-icon hp-icon"></i>
        <div class="member-resource-bar">
          <div class="member-resource-fill hp-fill" style="width: {{hp.pct}}%"></div>
        </div>
        <span class="resource-label">{{hp.value}}<span class="resource-sep">/</span>{{hp.max}}</span>
      </div>

      {{! Fatigue skulls }}
      <div class="member-fatigue-row" data-tooltip="{{localize 'VAGABOND.Actor.Party.Card.Fatigue'}}">
        <i class="fas fa-skull resource-icon fatigue-icon"></i>
        <div class="member-fatigue-pips">
          {{#each fatigueBoxes}}
            <span class="fatigue-pip {{#if checked}}filled{{/if}}"></span>
          {{/each}}
        </div>
      </div>

      {{! XP bar }}
      <div class="member-resource-row member-xp-row" data-tooltip="{{localize 'VAGABOND.Actor.Party.Card.XP'}}: {{xp.current}}/{{xp.required}}">
        <i class="fas fa-star resource-icon xp-icon"></i>
        <div class="member-resource-bar">
          <div class="member-resource-fill xp-fill" style="width: {{xp.pct}}%"></div>
        </div>
        <span class="resource-label">{{xp.current}}<span class="resource-sep">/</span>{{xp.required}}</span>
      </div>
    </div>
  </header>

  {{! ── Stats Row ──────────────────────────────────────── }}
  <div class="member-stats-row">

    {{! Mana (only for spellcasters, but show grayed row otherwise) }}
    <div class="member-stat mana-stat {{#unless mana.isSpellcaster}}non-caster{{/unless}}"
         data-tooltip="{{localize 'VAGABOND.Actor.Party.Card.Mana'}} {{mana.current}}/{{mana.max}} | {{localize 'VAGABOND.Actor.Party.Card.ManaCast'}} {{mana.castingMax}}">
      <i class="fas fa-star resource-icon mana-icon"></i>
      <div class="member-resource-bar mana-bar">
        <div class="member-resource-fill mana-fill" style="width: {{mana.pct}}%"></div>
      </div>
      <span class="resource-label">{{mana.current}}<span class="resource-sep">/</span>{{mana.max}}</span>
      <span class="mana-cast-label">| {{mana.castingMax}}</span>
    </div>

    {{! Armor + Inventory on one row }}
    <div class="member-stat-pair">
      <div class="member-stat armor-stat" data-tooltip="{{localize 'VAGABOND.Actor.Party.Card.Armor'}}">
        <i class="fas fa-shield-halved stat-icon"></i>
        <span class="stat-value">{{armor}}</span>
      </div>
      <div class="member-stat slots-stat" data-tooltip="{{localize 'VAGABOND.Actor.Party.Card.Slots'}}">
        <i class="fas fa-briefcase stat-icon"></i>
        <span class="stat-value">{{inventory.used}}<span class="resource-sep">/</span>{{inventory.total}}</span>
      </div>
    </div>

    {{! Luck + Studied Dice on one row }}
    <div class="member-stat-pair">
      <div class="member-stat luck-stat" data-tooltip="{{localize 'VAGABOND.Actor.Party.Card.Luck'}}">
        <i class="fas fa-clover stat-icon"></i>
        <span class="stat-value">{{luck.current}}<span class="resource-sep">/</span>{{luck.total}}</span>
      </div>
      <div class="member-stat studied-stat" data-tooltip="{{localize 'VAGABOND.Actor.Party.Card.StudiedDice'}}">
        <i class="fas fa-dice-d6 stat-icon"></i>
        <span class="stat-value">{{studiedDice}}</span>
      </div>
    </div>

    {{! Currency }}
    <div class="member-stat member-currency" data-tooltip="{{localize 'VAGABOND.Actor.Party.Card.Wealth'}}">
      <i class="fas fa-coins stat-icon"></i>
      <span class="stat-value">{{currency.gold}}<span class="currency-abbr">g</span></span>
      <span class="stat-value">{{currency.silver}}<span class="currency-abbr">s</span></span>
      <span class="stat-value">{{currency.copper}}<span class="currency-abbr">c</span></span>
    </div>

  </div>

  {{! ── Saves Row ───────────────────────────────────────── }}
  <div class="member-saves-row">
    <div class="member-save reflex-save" data-tooltip="{{saves.reflex.label}}">
      <i class="fas fa-bolt save-icon"></i>
      <span class="save-value">{{saves.reflex.difficulty}}</span>
    </div>
    <div class="member-save endure-save" data-tooltip="{{saves.endure.label}}">
      <i class="fas fa-shield-heart save-icon"></i>
      <span class="save-value">{{saves.endure.difficulty}}</span>
    </div>
    <div class="member-save will-save" data-tooltip="{{saves.will.label}}">
      <i class="fas fa-brain save-icon"></i>
      <span class="save-value">{{saves.will.difficulty}}</span>
    </div>
  </div>

  {{! ── Equipped Items ───────────────────────────────────── }}
  {{#if equippedItems.length}}
  <div class="member-equipped-list">
    <p class="member-list-label">{{localize 'VAGABOND.Actor.Party.Card.Equipped'}}</p>
    <ul class="member-item-list">
      {{#each equippedItems}}
        <li class="member-item-entry" data-tooltip="{{name}}">
          <img class="member-item-icon" src="{{img}}" alt="{{name}}">
          <span class="member-item-name">{{name}}</span>
        </li>
      {{/each}}
    </ul>
  </div>
  {{/if}}

  {{! ── Favorited Spells ────────────────────────────────── }}
  {{#if favoritedSpells.length}}
  <div class="member-spells-list">
    <p class="member-list-label">{{localize 'VAGABOND.Actor.Party.Card.Spells'}}</p>
    <ul class="member-item-list">
      {{#each favoritedSpells}}
        <li class="member-item-entry" data-tooltip="{{name}}">
          <img class="member-item-icon" src="{{img}}" alt="{{name}}">
          <span class="member-item-name">{{name}}</span>
        </li>
      {{/each}}
    </ul>
  </div>
  {{/if}}

  {{! ── Status Effects ──────────────────────────────────── }}
  {{#if statuses.length}}
  <div class="member-statuses">
    {{#each statuses}}
      <img
        class="member-status-icon clickable"
        src="{{img}}"
        data-tooltip="{{label}}"
        data-action="memberStatusChat"
        data-actor-uuid="{{actorUuid}}"
        data-effect-id="{{effectId}}"
        alt="{{label}}"
      >
    {{/each}}
  </div>
  {{/if}}

</div>
